<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Add Resources Here -->
    <StreamGeometry x:Key="NozzleButton">
        M0,0 L40,0 L70,30 L40,60 L0,60 Z
    </StreamGeometry>
    
    <RotateTransform x:Key="Rotate090" Angle="090"/>
    <RotateTransform x:Key="Rotate180" Angle="180"/>
    <RotateTransform x:Key="Rotate270" Angle="270"/>
    
    <ControlTheme x:Key="TriangleButton" 
                  TargetType="Button">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="Gray"/>

        <Setter Property="Template">
            <ControlTemplate>
                <Path Name="border"
                      Stroke="{TemplateBinding BorderBrush}"
                      Fill="{TemplateBinding Background}"
                      Data="{StaticResource NozzleButton}">
                </Path>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
    
</ResourceDictionary>
